<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Tiger Business Portal</title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="./vendors/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="./vendors/base/vendor.bundle.base.css">
  <link href="vendors/growl-notification/colored-theme.min.css" rel="stylesheet">
  <!-- endinject -->
  <!-- plugin css for this page -->
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <link rel="stylesheet" href="./css/style.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="./images/favicon.png" />
  <style> 
  .colorer{
    background-size: cover;
    background: linear-gradient(45deg, rgba(234, 137, 1, 0.4), rgba(245, 175, 25, 0.4)),
    url("./images/auth/lockscreen-bg.jpg")center top no-repeat;
    }
  </style>
</head>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper colorer d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <a href="/">
                <img src="./images/logo-orange.png" alt="logo">
              </a>
              </div>
              <h4>Welcome to your Business Portal!</h4>
              <h6 class="font-weight-light">Sign in to continue.</h6>
              <form class="pt-3" action="/admin/login" method="post">
                <div class="form-group">
                  <input name="email" type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Enter Email">
                </div>
                <div class="form-group">
                  <input name="password" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Enter Password">
                </div>
                <div class="mt-3">
                  <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                  <div class="form-check">
                    <label class="form-check-label text-muted">
                      <input type="checkbox" class="form-check-input">
                      Keep me signed in
                    </label>
                  </div>
                  <a href="#" class="auth-link text-black">Forgot password?</a>
                </div>
                <!-- <div class="mb-2">
                  <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                    <i class="mdi mdi-facebook mr-2"></i>Connect using facebook
                  </button>
                </div> -->
                <div class="text-center mt-4 font-weight-light">
                  Don't have an account? <a href="/dashboard/register" class="text-primary">Register your Restaurant</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="./vendors/base/vendor.bundle.base.js"></script>
  <script src="vendors/growl-notification/growl-notification.min.js"></script>
  <!-- endinject -->
  <!-- inject:js -->
  <script src="./js/off-canvas.js"></script>
  <script src="./js/hoverable-collapse.js"></script>
  <script src="./js/template.js"></script>
  <script>
    if(<%- JSON.stringify(success_msg) %> != ''){
      var messages = <%- JSON.stringify(success_msg) %> ;
       GrowlNotification.notify({
        title: 'Well Done!',
        description: messages,
        type: 'success',
        position: 'top-right',
        closeTimeout: 2000
        });
      };

      if(<%- JSON.stringify(error_msg) %> != ''){
      var messages = <%- JSON.stringify(error_msg) %> ;
       GrowlNotification.notify({
        title: 'Sorry',
        description: messages,
        type: 'error',
        position: 'top-right',
        closeTimeout: 2000
        });
      };
  </script>
  <!-- endinject -->
</body>

</html>
